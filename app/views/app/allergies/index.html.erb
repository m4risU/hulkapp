<h1>App::Allergies#index</h1>
<p>Find me in app/views/app/allergies/index.html.erb</p>

<%= simple_form_for(current_user, as: :user, method: :post, url: app_allergies_path) do |f| %>
  <%= f.input :allergy_ids, as: :check_boxes, collection: @allergies, label_method: :name, value_method: :id %>
  <%= f.button :submit %>
<% end %>